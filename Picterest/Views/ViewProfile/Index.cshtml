@using Picterest.Views.Manage
@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<h4>@ViewData["Title"]</h4>



<div class="row">
    <div class="col-md-6">
        Your albums:

        @if (Model == null || Model.Albums == null || Model.Albums.Count == 0)
            {
            @("No albums yet!");
            }
            else
            {
                foreach (Album a in Model.Albums)
                {
                @(a.Name + " ");
                }
            }


    </div>
</div>


<a asp-area="" asp-controller="ViewProfile" asp-action="AddAlbum" title="Add">Add a new album</a>

<div class="fh5co-gallery">
@if (!(Model == null || Model.Albums == null || Model.Albums.Count == 0))
{
    foreach (Album a in Model.Albums)
     {
         <a asp-controller="ViewProfile" asp-action="ViewAlbumImages" asp-route-albumId="@a.AlbumId"class="gallery-item">
             <img src="images/work_1.jpg" alt="Free HTML5 Bootstrap Template by FreeHTML5.co">
             <span class="overlay">
                 <h2>@a.Name</h2>
                 <span>@a.Images.Count</span>
             </span>
         </a>
     }
}

</div>

<div class="fh5co-narrow-content">
    <div class="row">
        <div class="col-md-4 animate-box" data-animate-effect="fadeInLeft">
            <h1 class="fh5co-heading-colored">Get in touch</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 animate-box" data-animate-effect="fadeInLeft">
            <p class="fh5co-lead">Separated they live in Bookmarksgrove right at the coast of the Semantics, a large language ocean.</p>
            <p><a href="#" class="btn btn-primary btn-outline">Learn More</a></p>
        </div>

    </div>
</div>
